@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Alan Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="FeatureId"/>
                        <label>Başlık</label>
                        <input tpype="text" asp-for="Title" class=" form-control " />
                        <br />
                        <label>Alt Başlık</label>
                        <input tpype="text" asp-for="SubTitle" class=" form-control " />
                        <br />
                        <label>Açıklama</label>
                        <input tpype="text" asp-for="Description" class=" form-control " />
                        <br />
                        <label>GörselUrl</label>
                        <input tpype="text" asp-for="ImageUrl" class=" form-control " />
                        <br />
                        <label>VideoURL (Embed Link)</label>
                        <input tpype="text" asp-for="VideoUrl" class=" form-control " />
                        <br />
                        <button class="btn btn-success">Önce Çıkan Alanı Güncelle</button>
                         </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
