@model UpdateChefDto
@{
    ViewData["Title"] = "CreateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Şef Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ChefId" />
                            <label>Şef Adı</label>
                            <input Type="text" asp-for="NameSurname" class=" form-control " />
                            <br />
                            <label>Şef Ünvan</label>
                            <input Type="text" asp-for="Title" class=" form-control " />
                            <br />
                            <label>Açıklama Bilgisi</label>
                            <input Type="text" asp-for="Description" class=" form-control " />
                            <br />
                            <label>Şef Görsel URL</label>
                            <input Type="text" asp-for="ImageUrl" class=" form-control " />
                            <br />
                            <button class="btn btn-primary">Şefi Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


