@model UpdateYummyEventDto
@{
    ViewData["Title"] = "UpdateYummyEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Organizasyon Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="YummyEventId" />
                            <<label>Organizasyon Başlığı</label>
                            <input Type="text" asp-for="Title" class=" form-control " />
                            <br />
                            <label>Organizasyon Açıklaması</label>
                            <input Type="text" asp-for="Description" class=" form-control " />
                            <br />
                            <label>Organizasyon Fiyatı</label>
                            <input Type="text" asp-for="Price" class=" form-control " />
                            <br />
                            <label>Organizasyon ImageURL</label>
                            <input Type="text" asp-for="ImageUrl" class=" form-control " />
                            <br />
                            <button class="btn btn-success">Organizasyonu Düzenle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
