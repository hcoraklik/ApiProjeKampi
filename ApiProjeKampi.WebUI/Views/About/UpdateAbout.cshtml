@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımda Alanı Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Başlık</label>
                            <input tpype="text" asp-for="Title" class=" form-control " />
                            <br />
                            <label>Rezervasyon Numarası</label>
                            <input tpype="text" asp-for="ReservationNumber" class=" form-control " />
                            <br />
                            <label>Görsel Url</label>
                            <input tpype="text" asp-for="ImageUrl" class=" form-control " />
                            <br />
                            <label>Video Kapak Görseli</label>
                            <input tpype="text" asp-for="VideoCoverImageUrl" class=" form-control " />
                            <br />
                            <label>Video Linki (Embed olarak)</label>
                            <input tpype="text" asp-for="VideoUrl" class=" form-control " />
                            <br />
                            <label>Açıklama</label>
                            <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                            <br />
                           
                            <button class="btn btn-primary">Hakkımda Alanı Düzenle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>